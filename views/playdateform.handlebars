{{#if loggedIn}}
<div class="container">
    <h3>You are already registered!</h3>
    <div class="input-field col s12 m3 l3">
                <a href="/dashboard" class="waves-effect waves-light btn btn-large">back to dashboard</a>
            </div>
    </div>
{{else}}
<section class="form-layout container">
    <div class="column">
        <form class="col l12">
            <div class="name_age">
                {{!-- Input for username --}}
                <div class="input-field col s12 m12 l6">
                    <input id="new-username" type="text" class="validate">
                    <label for="new-username">Email</label>
                </div>
                {{!-- Input for password --}}
                <div class="input-field col s12 m12 l6">
                    <input id="new-password" type="password" class="validate">
                    <label for="new-password">Password</label>
                </div>
            </div>
            <div class="name_age">
                {{!-- Input for pets name --}}
                <div class="input-field col s12 m12 l6">
                    <input id="pet_name" type="text" class="validate">
                    <label for="pet_name">Pet Name</label>
                </div>
                {{!-- Input for pets age --}}
                <div class="input-field col s12 m12 l6">
                    <input id="pet_age" type="text" class="validate">
                    <label for="pet_age">Pet Age</label>
                </div>
            </div>
            {{!-- Upload picture button --}}
            <div class="input-field col s12 m3 l3">
                <a id="upload_widget" href="#" class="cloudinary-button">Upload picture</a>
            </div>
            {{!-- Dropdown to select the pets species --}}
            <div class="col s12 m12 l6">
                <select id="species">
                    <option value="" disabled selected>Select your pets species</option>
                    <option value="Dog">Dog</option>
                    <option value="Cat">Cat</option>
                    <option value="Bird">Bird</option>
                    <option value="Lizard">Lizard</option>
                </select>
            </div>
            {{!-- Slider for pet activeness --}}
            <div class="col s12 m12 l6">
                <form>
                    <label>Activity level of your pet? (1 is chill/lazy, 5 is hyper)</label>
                    <p class="range-field">
                        <input type="range" id="activity_level" min="1" max="5" />
                    </p>
                </form>
            </div>
            {{!-- Gender radio buttons --}}
            <div class="col s12 m12 l6">
                <form>
                    <p>Gender of your pet?</p>
                    <p>
                        <label>
                            <input value="Female" name="gender" type="radio" />
                            <span>Female</span>
                        </label>
                    </p>
                    <p>
                        <label>
                            <input value="Male" name="gender" type="radio" />
                            <span>Male</span>
                        </label>
                    </p>
                </form>
            </div>
            {{!-- Fixed radio buttons --}}
            <div class="col s12 m12 l6">
                <form>
                    <p>Is your pet fixed?</p>
                    <p>
                        <label>
                            <input value="true" name="fixed" type="radio" />
                            <span>Yes</span>
                        </label>
                    </p>
                    <p>
                        <label>
                            <input value="false" name="fixed" type="radio" />
                            <span>No</span>
                        </label>
                    </p>
                </form>
            </div>
            {{!-- Submit button --}}
            <div class="input-field col s12 m3 l3">
                <a id="signup-btn" href="#" class="waves-effect waves-light btn btn-large">Signup</a>
            </div>
        </form>
    </div>
</section>

<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script> 
<script src="/js/signup.js"></script> 
{{/if}}