<section class="dashboard-layout container">
  {{!--Date Picker--}}
  <div class="row">
    <div class="col s12 m12 l12">
      <div class="card">
        <form>
          <div class="input-field col s12 m6 l6">
            <input type="text" class="datepicker" id="new-date" />
            <label>Pick a date for your event</label>
          </div>
          <div class="input-field col s12 m3 l3">
            <select id="location-zip">
              <option class="disabled selected">Choose a location</option>
              <option value="19102">19102</option>
              <option value="19103">19103</option>
              <option value="19104">19104</option>
              <option value="19106">19106</option>
              <option value="19107">19107</option>
              <option value="19111">19111</option>
              <option value="19112">19112</option>
              <option value="19114">19114</option>
              <option value="19115">19115</option>
              <option value="19116">19116</option>
            </select>
            <label>Playdate Location</label>
          </div>
          <div class="input-field col s12 m3 l3">
            <a class="waves-effect waves-light btn btn-large" id="enroll" data-petid="{{pet.id}}">Create Event</a>
          </div>
        </form>
      </div>
    </div>
  </div>
  {{!--List for upcoming events--}}
  <div class="row">
    <div class="col s12 m6 l6">
      <h4>Upcoming Events</h4>
      <ul class="collection">
        {{#each pet.pet_playdates as |event|}}
        <li>
          <span class="event-location">Location: {{event.location}} | </span>
          <span class="event-date">Date: {{format_date event.date}} | </span>
          <span><a href="/events/{{event.id}}">View Details</a></span>
        </li>
        <hr>
        {{/each}}
      </ul>
    </div>

    <div class="col s12 m6 l6">
      <h4>Bio</h4>
      <div class="card">
    <div class="card-image waves-effect waves-block waves-light">
      <img class="activator" src="{{pet.pet_img}}">
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4">{{pet.pet_name}}<i class="material-icons right">more_vert</i></span>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">{{pet.pet_name}}<i class="material-icons right">close</i></span>
      <ul class="collection">
        <li>Age: {{pet.pet_age}}</li>
        <li>Species: {{pet.species}}</li>
        <li>Gender: {{pet.gender}}</li>
        <li>Activity level: {{pet.activity_level}}</li>
        <li>Fixed: {{#if pet.fixed}} yes {{else}} no {{/if}}</li>
      </ul>
    </div>
  </div>
</section>

<script src="/js/newEvent.js"></script>